@model List<ECommerce.Models.Product>


<section id="team" class="team section">

    <!-- Section Title -->
    <div class="container section-title aos-init aos-animate" data-aos="fade-up">
        <h2>@ViewBag.Category.Name</h2>
        <p>@ViewBag.Category.Description</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-6 d-flex align-items-stretch aos-init aos-animate" data-aos="fade-up" data-aos-delay="100">
                    <div class="team-member">
                       
                    <div class="member-img">

                            <img src="https://localhost:62599/upload/@item.Photo" class="img-fluid" alt="">
                            
                    </div>
                      
                        <div class="member-info">
                            <a href="/Home/productDetails/@item.Id">
                            <h4>@item.Name</h4>
                            </a>

                            <p>@item.Description</p>
                            <span> سعر المنتج  : $ @item.Price </span>
                        </div>
                    
                </div>
            </div><!-- End Team Member -->
            }
          
        </div>

    </div>

</section>